<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/accent"
        android:elevation="4dp"
        android:gravity="center"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title=""
        >

        <ImageView
            android:id="@+id/tool_bar_right_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:src="@android:drawable/ic_delete"
            />

        <TextView
            android:id="@+id/id_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="default_title"
            android:textColor="?colorControlNormal"
            android:textSize="17sp"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_btn_change_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_default_white"
            android:gravity="center"
            android:padding="10dp"
            android:text="已登录"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_input_clan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#f6f6f6"
            android:gravity="bottom"
            android:hint="请输入url"
            app:counterEnabled="false"
            app:errorEnabled="false"
            app:hintAnimationEnabled="true"
            >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/id_edit_clan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="7dp"
                android:paddingTop="3dp"
                android:textSize="17sp"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/id_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        />

    <WebView
        android:id="@+id/id_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_default_white">

    </WebView>

</LinearLayout>
