<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/id_include_base"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_white"
    android:orientation="vertical">


    <Button
        android:id="@+id/id_btn_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ripple_btn_1"/>

    <Button
        android:id="@+id/id_btn_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ripple_btn_2"/>

    <Button
        android:id="@+id/id_btn_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/id_btn_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_btn_3"/>

    <Button
        android:id="@+id/id_btn_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/id_btn_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ripple_btn_4"/>


</RelativeLayout>