<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/id_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?colorPrimary"
        android:elevation="1dp"
        android:gravity="center"
        android:transitionName="header_1"
        app:contentInsetStart="0dp"
        app:title=""
        />

    <Button
        android:id="@+id/id_btn_switch"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ripple_default_btn"
        android:elevation="5dp"
        android:stateListAnimator="@animator/ripple_test"
        android:transitionName="fab_btn"/>


    <!--<include-->
    <!--layout="@layout/layout_transition_second_before"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_below="@+id/id_tool_bar"-->
    <!--/>-->

    <FrameLayout
        android:id="@+id/id_include_transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_tool_bar"/>

</RelativeLayout>