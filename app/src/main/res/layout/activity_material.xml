<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <MultiAutoCompleteTextView
        android:id="@+id/id_auto_complete_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/id_text_block"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rectangle_bg"
        android:translationZ="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_btn_change_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"/>

        <Button
            android:id="@+id/id_btn_change_palette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="test"/>
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_default_fuzzy"
        android:tint="#442C3E50"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_default_fuzzy"/>

    <TextView
        android:id="@+id/id_image_palette"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@null"
        android:spinnerMode="dialog"
        >


    </Spinner>

</LinearLayout>